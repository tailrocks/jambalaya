schema {
  query: Query
  mutation: Mutation
}

type Query {
  tableList(input: TableListInput!): TableListPayload!

  hello: String
}

type Mutation {
  tableCreate(input: TableCreateInput!, additionalArgument: String, additionalArgument2: String!): TableCreatePayload!
}

input TableListInput {
  databaseName: String!
  charset: String
}

input TableCreateInput {
  tableName: String!
}

enum SecurityErrorCode {
  UNAUTHORIZED
  DENIED
}

enum AnotherErrorCode {
  TEST1
  TEST2
}

type TableListPayload {
  data: [Table!]
  error: TableListPayloadError
}

type TableCreatePayload {
  data: Table
  error: TableCreatePayloadError
}

type Table {
  name: String!
  columns: [TableColumn!]!
  description(long: Boolean): String
}

type TableColumn {
  name: String!
  kind: String!
  description: String
}

type SecurityError {
  code: SecurityErrorCode!
  message: String!
}

type AnotherTypeError {
  code: AnotherErrorCode
  someField: String @deprecated(reason: "Please avoid")
}

union TableListPayloadError = SecurityError | AnotherTypeError
union TableCreatePayloadError = SecurityError
